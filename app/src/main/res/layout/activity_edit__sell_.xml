<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4AFFBB33"
    tools:context=".Add_Sell_Activity">

    <Spinner
        android:id="@+id/spinner_stock_edit"
        android:layout_width="283dp"
        android:layout_height="44dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/layout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_price_edit" />

    <Spinner
        android:id="@+id/spinner_price_edit"
        android:layout_width="283dp"
        android:layout_height="44dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/layout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_item_name_edit" />

    <Spinner
        android:id="@+id/spinner_sort_id_edit"
        android:layout_width="283dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/layout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_editText" />

    <Spinner
        android:id="@+id/spinner_item_name_edit"
        android:layout_width="283dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/layout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_sort_id_edit" />

    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="131dp"
        android:background="@drawable/layout"
        android:text="修改商品"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_stock_edit" />

    <EditText
        android:id="@+id/id_editText"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>